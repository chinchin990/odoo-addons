<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Optional checkbox for Unit Price in PR form embedded tree -->
    <record id="pr_form_embedded_unit_price_optional" model="ir.ui.view">
      <field name="name">purchase.request.form.unit.price.optional</field>
      <field name="model">purchase.request</field>
      <field name="inherit_id" ref="purchase_request_department_approval.view_purchase_request_form_inherit_prices_and_reason"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='unit_price']" position="attributes">
          <attribute name="optional">show</attribute>
        </xpath>
      </field>
    </record>
  </data>
</odoo>

