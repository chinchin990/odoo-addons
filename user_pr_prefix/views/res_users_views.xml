<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend the user form view to add the PR prefix setting -->
        <record id="view_users_form_pr_prefix" model="ir.ui.view">
            <field name="name">res.users.form.pr.prefix</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <!-- Locate the 'Timezone' (tz) field within the 'Preferences' tab -->
                <field name="tz" position="after">
                    <field name="pr_prefix" 
                           string="PR Prefix"
                           placeholder="e.g., K1-WH-PR-"
                           help="This prefix will be used for auto-generating Purchase Request numbers. Format: [PREFIX][YEAR]-[SEQUENCE]"/>
                </field>
            </field>
        </record>

        <!-- Also add the PR prefix to the user list view for display -->
        <record id="view_users_tree_pr_prefix" model="ir.ui.view">
            <field name="name">res.users.tree.pr.prefix</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_tree"/>
            <field name="arch" type="xml">
                <field name="login" position="after">
                    <field name="pr_prefix" optional="hide"/>
                </field>
            </field>
        </record>

    </data>
</odoo>