<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Optional checkbox for x_supplier in PR form embedded tree (inserted by supplier column module) -->
    <record id="pr_form_embedded_supplier_optional" model="ir.ui.view">
      <field name="name">purchase.request.form.supplier.optional</field>
      <field name="model">purchase.request</field>
      <field name="inherit_id" ref="purchase_request_supplier_column.view_purchase_request_form_inherit_supplier_column"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='x_supplier']" position="attributes">
          <attribute name="optional">show</attribute>
        </xpath>
      </field>
    </record>
  </data>
</odoo>

