<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_request_form_inherit_dept_approve" model="ir.ui.view">
        <field name="name">purchase.request.form.inherit.dept.approve</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="statusbar_visible">draft,to_be_dept_approved,to_purchasing_verify,to_approve,approved,in_progress,done</attribute>
            </xpath>

            <xpath expr="//header" position="inside">
                <button
                    name="button_draft"
                    type="object"
                    string="Reset"
                    invisible="state != 'to_be_dept_approved'"
                    groups="purchase_request.group_purchase_request_user"
                />
                <button name="button_dept_approve"
                        type="object"
                        string="Department Approve"
                        class="oe_highlight"
                        invisible="state != 'to_be_dept_approved'"
                        groups="purchase_request_department_approval.group_purchase_request_department_manager"/>
                <button name="button_purchasing_verify"
                        type="object"
                        string="Purchasing Verify"
                        class="oe_highlight"
                        invisible="state != 'to_purchasing_verify'"
                        groups="purchase_request.group_purchase_request_manager"/>
            </xpath>

            <!-- Show Approved Date after Creation Date -->
            <xpath expr="//field[@name='date_start']" position="after">
                <field name="approved_date" readonly="1"/>
            </xpath>

            <!-- Make Requested By always readonly (default is creator) -->
            <xpath expr="//field[@name='requested_by']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

        </field>
    </record>
    <!-- Disable Create RFQ button in UI for PR Users and Department Managers -->
    <record id="view_purchase_request_form_inherit_rfq_restrict" model="ir.ui.view">
        <field name="name">purchase.request.form.inherit.rfq.restrict</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
        <field name="priority" eval="120"/>
        <field name="arch" type="xml">
        <xpath expr="//button[@name='%(purchase_request.action_purchase_request_line_make_purchase_order)d']" position="attributes">
            <!-- 只允许 System Admin 和 Purchase Request Manager 看得到 -->
            <attribute name="groups">base.group_system,purchase_request.group_purchase_request_manager</attribute>
        </xpath>
    </field>
    </record>

    <!-- Disable line add/edit in UI for PR Users and Department Managers -->
    <record id="view_purchase_request_form_inherit_lines_lock_by_group" model="ir.ui.view">
        <field name="name">purchase.request.form.inherit.lines.lock.by.group</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']" position="attributes">
                <attribute name="create" groups="purchase_request.group_purchase_request_user">0</attribute>
                <attribute name="edit" groups="purchase_request.group_purchase_request_user">0</attribute>
                <attribute name="create" groups="purchase_request_department_approval.group_purchase_request_department_manager">0</attribute>
                <attribute name="edit" groups="purchase_request_department_approval.group_purchase_request_department_manager">0</attribute>
            </xpath>
        </field>
    </record>

    <!-- Lock Purchase Request Line form editing for PR User and Dept Manager -->
    <record id="purchase_request_line_form_lock_by_group" model="ir.ui.view">
        <field name="name">purchase.request.line.form.lock.by.group</field>
        <field name="model">purchase.request.line</field>
        <field name="inherit_id" ref="purchase_request.purchase_request_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="edit" groups="purchase_request.group_purchase_request_user">0</attribute>
                <attribute name="create" groups="purchase_request.group_purchase_request_user">0</attribute>
                <attribute name="duplicate" groups="purchase_request.group_purchase_request_user">0</attribute>
                <attribute name="edit" groups="purchase_request_department_approval.group_purchase_request_department_manager">0</attribute>
                <attribute name="create" groups="purchase_request_department_approval.group_purchase_request_department_manager">0</attribute>
                <attribute name="duplicate" groups="purchase_request_department_approval.group_purchase_request_department_manager">0</attribute>
            </xpath>
        </field>
    </record>

    <!-- Inherit Purchase Request form: add Unit Price, rename Estimated Cost to Total Price, add Reason -->
    <record id="view_purchase_request_form_inherit_prices_and_reason" model="ir.ui.view">
        <field name="name">purchase.request.form.inherit.prices.reason</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree/field[@name='estimated_cost']" position="before">
                <field name="unit_price" widget="monetary"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='estimated_cost']" position="attributes">
                <attribute name="string">Total Price</attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='date_required']" position="after">
                <field name="reason" optional="hide"/>
            </xpath>
            <xpath expr="//label[@for='estimated_cost']" position="attributes">
                <attribute name="string">Total Price</attribute>
            </xpath>
            <xpath expr="//field[@name='estimated_cost' and @nolabel='1']" position="attributes">
                <attribute name="string">Total Price</attribute>
            </xpath>
        </field>
    </record>

    <!-- Inherit Purchase Request Line form: add Unit Price, rename Total Price, add Reason -->
    <record id="purchase_request_line_form_inherit_prices_reason" model="ir.ui.view">
        <field name="name">purchase.request.line.form.inherit.prices.reason</field>
        <field name="model">purchase.request.line</field>
        <field name="inherit_id" ref="purchase_request.purchase_request_line_form"/>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='settings']/field[@name='name']" position="after">
                <field name="reason" readonly="is_editable == False"/>
            </xpath>
            <xpath expr="//group[@name='settings']//field[@name='estimated_cost']" position="before">
                <field name="unit_price" widget="monetary" readonly="is_editable == False"/>
            </xpath>
            <xpath expr="//group[@name='settings']//field[@name='estimated_cost']" position="attributes">
                <attribute name="string">Total Price</attribute>
            </xpath>
        </field>
    </record>

    <!-- Inherit Purchase Request Line tree: add Unit Price and rename Total Price -->
    <record id="purchase_request_line_tree_inherit_prices" model="ir.ui.view">
        <field name="name">purchase.request.line.tree.inherit.prices</field>
        <field name="model">purchase.request.line</field>
        <field name="inherit_id" ref="purchase_request.purchase_request_line_tree"/>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='estimated_cost']" position="before">
                <field name="unit_price" widget="monetary"/>
            </xpath>
            <xpath expr="//field[@name='estimated_cost']" position="attributes">
                <attribute name="string">Total Price</attribute>
            </xpath>
        </field>
    </record>

    <!-- PR Number readonly via view for PR User and Dept Manager -->
    <record id="view_purchase_request_form_inherit_pr_number_readonly" model="ir.ui.view">
        <field name="name">purchase.request.form.inherit.pr.number.readonly</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
        <field name="priority" eval="110"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="attributes" groups="purchase_request.group_purchase_request_user,purchase_request_department_approval.group_purchase_request_department_manager">
                <attribute name="readonly">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>