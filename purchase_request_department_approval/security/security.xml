<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 1. Department Manager Group Definition -->
        <record id="group_purchase_request_department_manager" model="res.groups">
            <field name="name">Department Purchase Manager</field>
            <field name="category_id" ref="purchase_request.module_category_purchase_request"/>
            <field name="implied_ids" eval="[(4, ref('purchase_request.group_purchase_request_user'))]"/>
            <field name="comment">
                Users in this group can approve purchase requests from their own department (based on PR Prefix).
            </field>
        </record>

        <!-- 2. Record Rule for Department-level isolation -->
        <record id="purchase_request_department_manager_rule" model="ir.rule">
            <field name="name">Purchase Request: Department Manager visibility</field>
            <field name="model_id" ref="purchase_request.model_purchase_request"/>
            <field name="groups" eval="[(4, ref('group_purchase_request_department_manager'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">[('requested_by.pr_prefix', '=', user.pr_prefix)]</field>
        </record>
    </data>
</odoo>
